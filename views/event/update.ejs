<!--update.ejs-->
<form action="/event/update/<%= event.id %>" method="POST">
    <div class="row">
        <div class="col-md-6 col-12">

    <div class="form-group">
        <label>Name</label>
        <input type="text" class="form-control" name="Event[name]" value="<%= event.name %>" required>
    </div>
    <div class="form-group">
            <label>Short Description</label>
            <textarea class="form-control" name="Event[short_desc]" rows="5" required><%= event.short_desc %></textarea>
        </div>
        <div class="form-group">
                <label>Full Description</label>
                <textarea class="form-control" name="Event[full_desc]" rows="10" required><%= event.full_desc %></textarea>
            </div>
            
    </div>
    <div class="col-md-6 col-12">
    <div class="form-group">
            <label>Image URL</label>
            <input type="text" class="form-control" name="Event[img_url]" value="<%= event.img_url %>" required>
        </div>


    <div class="form-group">
            <label>Organizer</label>
            <select class="form-control" name="Event[organizer]" value="<%= event.organizer %>">
                    <% organizers.forEach(function(organizer){ %>
                        <option value="<%=organizer %>" <% if (organizer === event.organizer) { %>
                        selected="selected"
                        <% }; %>
                            ><%=organizer %></option>
                      <% }); %>
      </select>
        </div>
   

    <div class="form-group">
        <label>Date</label>
        <input type="text" class="form-control date" name="Event[date]" value="<%= event.date.toString().match(/^\d\d\d\d-\d\d-\d\d/) %>" required>
    </div>
    <div class="form-group">
        <label>Time</label>
        <input type="text" class="form-control" name="Event[time]" value="<%= event.time %>" required>
    </div>
    <div class="form-group">
        <label>Venue</label>
        <select class="form-control" name="Event[venue]" value="<%= event.venue %>">
                <% venues.forEach(function(venue){ %>
                    <option value="<%=venue %>" <% if (venue === event.venue) { %>
                    selected="selected"
                    <% }; %>
                        ><%=venue %></option>
                  <% }); %>
                    </select>
                </div>
    <div class="form-group">
        <label>Quota</label>
        <input type="number" class="form-control" name="Event[quota]" value="<%= event.quota %>" required>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="checkbox" name="Event[highlighted]" value="Highlighted" id="HighlightedCheck"
        <% if (event.highlighted === "Highlighted") { %>
            checked
            <% }; %>
        >
        <label class="form-check-label" for="HighlightedCheck">Highlighted Event</label>
    </div>
    <button type="submit" class="btn btn-primary mt-2">Submit</button>
    </div>
</div>
</form>

<div class="row">
    <form action="/event/delete/<%= event.id %>" method="POST" class="col-2">
        <button class="btn btn-danger">Delete</button>
    </form>
</div>
